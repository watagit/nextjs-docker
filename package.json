    "autoprefixer": "^10.2.5",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "4",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.13",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.2.4"
